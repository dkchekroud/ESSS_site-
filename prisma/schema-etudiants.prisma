generator client {
  provider = "prisma-client-js"
  
  output   = "../node_modules/.prisma/student-client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL_ETUDIANTS")
}

model student {
  id         Int      @id @default(autoincrement())
  nom        String
  prenom     String
  email      String   @unique
  password   String
  matricule  String
  filiere    String
  section    String
  annee      String   //  Première, Deuxième, Troisième, etc.
  photo      String?  //  Photo optionnelle
  createdAt  DateTime @default(now())
}




