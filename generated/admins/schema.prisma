generator client {
  provider = "prisma-client-js"
  output   = "../generated/admins"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL_ADMINS")
}

model admin {
  id             Int      @id @default(autoincrement())
  nom            String
  prenom         String
  email          String   @unique
  password       String
  role           String   @default("admin")
  id_admin       String? // identifiant interne
  photo_identite String? // photo d'identit√©
  createdAt      DateTime @default(now())
}
