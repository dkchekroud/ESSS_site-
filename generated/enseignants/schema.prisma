generator client {
  provider = "prisma-client-js"
  output   = "../generated/enseignants"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL_ENSEIGNANTS")
}

model teacher {
  id              Int      @id @default(autoincrement())
  nom             String
  prenom          String
  email           String   @unique
  password        String
  grade           String? //  optionnel
  specialite      String? //  optionnel
  matricule       String? // optionnel
  module_enseigne String? // optionnel
  photo           String? // optionnel
  createdAt       DateTime @default(now())
}
